<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.niit.org.mapper.ILiveroom">
	<select id="getLiveroom" resultType="com.niit.org.bean.Liveroom">
		select * from liveroom where id=#{id} 
	</select>
	<select id="getAll" resultType="com.niit.org.bean.Liveroom">
		select * from liveroom
	</select>
	<select id="getLiveroomByUserid" resultType="com.niit.org.bean.Liveroom">
		select * from liveroom where userid=#{userid} 
	</select>
	<select id="createLiveroom" resultType="com.niit.org.bean.Liveroom">
		insert into Liveroom(title,dscp,userid,categoryname,rtmpurl,status) values(#{title},#{dscp},#{userid},#{categoryname},#{rtmpurl},#{status})
	</select>
	<select id="queryLiveRoomById" resultType="com.niit.org.dto.LiveRoomDTO">
		select
		l.id as id ,
		l.title as title,
		l.dscp as dscp ,
		l.userid as userid ,
		l.categoryname as categoryname,
		l.rtmpurl as rtmpurl,
		l.status as status,
		u.username as username
		from liveroom l left join user u on l.userid=u.id
		where l.id=#{userid}
	</select>
</mapper>